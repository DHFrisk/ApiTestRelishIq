@model IEnumerable<WebpageTestRelishIq.Models.UnifiedDataModel.Photo>

@{
    ViewData["Title"] = "Gallery";
}

<h1>Gallery</h1>

<div class="container col-md-12">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <form asp-controller="Home" asp-action="FilterGallery" method="get">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <label class="nav-link">Photo title:</label>
                        <input type="text" id="photoTitle" name="photoTitle" placeholder="some photo title" class="form-control" style="width:80%;" />
                    </li>
                    <li class="nav-item">
                        <label class="nav-link">Album title:</label>
                        <input type="text" id="albumTitle" name="albumTitle" placeholder="some album title" class="form-control" style="width:80%;" />
                    </li>
                    <li class="nav-item">
                        <label class="nav-link">User email:</label>
                        <input type="email" id="userEmail" name="userEmail" placeholder="some email" class="form-control" style="width:80%;" />
                    </li>
                    <li class="nav-item">
                        <label class="nav-link">Limit:</label>
                        <input type="number" id="limit" name="limit" placeholder="some limit (number)" class="form-control" style="width:80%;" />
                    </li>
                    <li class="nav-item">
                        <label class="nav-link">Offset:</label>
                        <input type="number" id="offset" name="offset" placeholder="some offset (number)" class="form-control" style="width:80%;" />
                    </li>
                    <li class="nav-item">
                        <button type="submit" id="filter" name="filter" class="btn btn-info">Filter</button>
                    </li>
                </ul>
            </form>

        </div>
    </nav>

    <br />
    <span>(Showing @Model.Count().ToString() items!)</span>
    <br />

    @foreach (var item in Model)
    {
        <div class="row">
            <div class="card col-md-3 d-flex align-items-stretch" style="height:25%;">
                <img class="card-img-top" src="@item.thumbnailUrl" alt="Card image cap">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <p>Photo title: @item.title</p>
                        <p>Url: @item.url</p>
                        <p>Id: @item.id</p>
                    </li>
                    <li class="list-group-item">
                        <p>Album title: @item.album.title</p>
                        <p>Album id: @item.album.id</p>
                    </li>
                    <li class="list-group-item">
                            <p>User name: @item.album.user.name</p>
                            <p>User address: @item.album.user.address.street @item.album.user.address.zipcode</p>
                            <p>User company: @item.album.user.company.name @item.album.user.company.bs</p>
                            <p>User phone: @item.album.user.phone</p>
                            <p>User email: @item.album.user.email</p>
                            <p>User id: @item.album.user.id</p>
                    </li>
                </ul>

            </div>
            <br />
        </div>
    }
</div>


